<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#e9e9e9">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="60dp"
     android:background="@color/white"
     android:orientation="horizontal">
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="40"
      android:layout_marginTop="12dp"
   android:orientation="vertical">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Delivering From"
       android:layout_marginLeft="20dp"
       android:textSize="10sp"
       android:layout_marginTop="0dp"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Peezious JT"
       android:layout_marginLeft="20dp"
       android:textStyle="bold"
       android:textSize="18sp"
       android:layout_marginTop="0dp"
       />

  </LinearLayout>

  <ImageButton
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:id="@+id/searchButton"
      android:background="@color/white"
      android:src="@drawable/baseline_search_2423"
      android:layout_weight="1"/>
  <ImageButton
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:id="@+id/cartButton"
      android:background="@color/white"
      android:src="@drawable/baseline_shopping_cart_2432"
      android:layout_weight="1"/>

  <ImageButton
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:id="@+id/accountButton"
      android:background="@color/white"
      android:src="@drawable/baseline_person_outline_2432"
      android:layout_weight="1"/>



 </LinearLayout>

 <androidx.viewpager2.widget.ViewPager2
     android:id="@+id/carouselViewPager"
     android:layout_width="match_parent"
     android:layout_height="170dp"
     android:layout_marginBottom="2dp"/>

<com.google.android.material.tabs.TabLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tablayout"
    app:tabIndicatorColor="#bb0909"
    app:tabTextColor="@color/black"
    android:background="@color/white"
    app:tabSelectedTextColor="@color/black"/>

 <androidx.viewpager2.widget.ViewPager2
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/viewpager"/>



</LinearLayout>